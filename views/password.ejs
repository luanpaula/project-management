<main class="page-center">
    <h2>Definir sua senha</h2>
    <form action="/password" method="POST" class="form-container fade-in">
        <div class="form-group">
            <label for="senha" class="form-label">Nova Senha:</label>
            <input type="password" class="form-input" id="senha" name="senha" required>
        </div>
        <div class="form-group"></div>
            <label for="confirmar" class="form-label">Confirmar Senha:</label>
            <input type="password" class="form-input" id="confirmar" name="confirmar" required>
        </div>
        <button type="submit" class="submit-btn">Salvar</button>
    </form>
</main>